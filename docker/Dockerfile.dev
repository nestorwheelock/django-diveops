FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    libffi-dev \
    shared-mime-info \
    git \
    gettext \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies
COPY requirements/base.txt requirements/dev.txt ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r dev.txt

# Install django-portal-ui
COPY lib/django-portal-ui/ /lib/django-portal-ui/
RUN pip install -e /lib/django-portal-ui

# Install django-primitives in dependency order
COPY lib/django-primitives/packages/ /lib/packages/
RUN pip install -e /lib/packages/django-basemodels && \
    pip install -e /lib/packages/django-singleton && \
    pip install -e /lib/packages/django-sequence && \
    pip install -e /lib/packages/django-money && \
    pip install -e /lib/packages/django-decisioning && \
    pip install -e /lib/packages/django-parties && \
    pip install -e /lib/packages/django-modules && \
    pip install -e /lib/packages/django-rbac && \
    pip install -e /lib/packages/django-communication && \
    pip install -e /lib/packages/django-audit-log && \
    pip install -e /lib/packages/django-documents && \
    pip install -e /lib/packages/django-catalog && \
    pip install -e /lib/packages/django-encounters && \
    pip install -e /lib/packages/django-worklog && \
    pip install -e /lib/packages/django-ledger && \
    pip install -e /lib/packages/django-agreements && \
    pip install -e /lib/packages/django-questionnaires && \
    pip install -e /lib/packages/django-notes && \
    pip install -e /lib/packages/django-geo && \
    pip install -e /lib/packages/django-layers && \
    pip install -e /lib/packages/django-cms-core && \
    pip install -e /lib/packages/django-ai-services

EXPOSE 8000

CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
